{
  "manifest_version": 3,
  "name": "TL;DW - YouTube Video Summarizer",
  "short_name": "TL;DW",
  "version": "1.2.0",
  "version_name": "1.2.0",
  "description": "AI-powered YouTube summaries. Get insights & takeaways instantly. Supports Claude, GPT-4, Gemini. Free with your API key.",
  "author": "Nick DiMoro",
  "homepage_url": "https://github.com/ndimoro/tldw-youtube-summarizer",
  "minimum_chrome_version": "88",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://api.anthropic.com/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options/options.html"
}
